{
  "custom_summary": "[ACTION REQUIRED] {{alert_name}} - {{alert_state}}",
  "evaluation": {
    "source": {
      "name": "TableID",
      "display": "TableID",
      "aggregation": "COUNT"
    },
    "comparison_operator": "EQUAL",
    "threshold": {
      "value": {
        "double_value": 0.0
      }
    },
    "notification": {
      "retrigger_seconds": 1,
      "notify_on_ok": false
    }
  },
  "schedule": {
    "quartz_cron_schedule": "0 0/2 * * * ?",
    "timezone_id": "America/New_York"
  },
  "query_lines": [
    "select a.* from ab_dev_catalog.config.metadata as a left anti join ab_dev_catalog.config.metadata as b on a.DWHTableName = b.DWHTableName "
  ],
  "custom_description_lines": [
    "Hello Team,",
    "",
    "The Feature Check has triggered an alert in your Databricks workspace.",
    "",
    "- **Alert Name:** {{ALERT_NAME}}",
    "- **Triggered At:** {{ALERT_THRESHOLD}}",
    "- **Condition:** {{ALERT_CONDITION}}",
    "- **Query Result:** {{QUERY_RESULT_VALUE}}",
    "",
    "Please review the findings and take necessary action if required.",
    "",
    "Regards,  ",
    "Databricks Monitoring"
  ]
}
